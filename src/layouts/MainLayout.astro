---
import "../styles/inter.css";
import "../styles/global.css";
import CommonHead from "../components/CommonHead.astro";
import Footer from "../components/Footer.astro";

const {
	title = "Michael Mandic",
	desc = "Personal website of Michael Mandic, a software engineer based in Belgrade, Serbia.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<CommonHead />
		<title>{title}</title>
		<meta name="description" content={desc} />
	</head>
	<body
		class="bg-neutral-100 min-h-screen dark:bg-neutral-900 text-neutral-600 dark:text-neutral-400 "
	>
		<div class="pt-24 px-6 max-w-2xl w-full mx-auto">
			<slot />
			<Footer />
		</div>
	</body>
</html>
